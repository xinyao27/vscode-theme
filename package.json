{
  "name": "vesper-purple-theme",
  "displayName": "Vesper Purple Theme",
  "description": "An vesper purple theme for VS Code",
  "version": "0.1.0",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/xinyao27/vscode-theme"
  },
  "publisher": "xinyao27",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "vscode",
    "theme",
    "vesper purple",
    "dark"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Vesper Purple",
        "uiTheme": "vs-dark",
        "path": "./themes/vesper-purple-color-theme.json"
      }
    ]
  },
  "scripts": {
    "dev": "bun --watch run ./scripts/index.ts",
    "build": "bun run ./scripts/index.ts",
    "package": "vsce package",
    "publish": "vsce publish",
    "release": "bun run build && release-it && bun run package && bun run publish"
  },
  "devDependencies": {
    "@types/bun": "^1.1.2",
    "@vscode/vsce": "^2.26.1",
    "@xystack/style-guide": "^0.0.5",
    "release-it": "^17.2.1"
  },
  "prettier": "@xystack/style-guide/prettier"
}
